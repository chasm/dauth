<p class="pull-right">
  <%= link_to "Sign in", new_user_session_path, :class => "btn btn-info" %>
  <%= link_to "Lost password?", new_user_password_path, :class => "btn btn-warning" %>
</p>

<h2>Sign up</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :autocomplete => "off" }) do |f| %>
  <fieldset>
    <%= devise_error_messages! %>
    <p>
      <%= f.text_field :name, :class => "span4", :placeholder => "Enter your name" %>
    </p>

    <p>
       <%= f.email_field :email, :class => "span4", :placeholder => "Enter your email address"  %>
    </p>

    <p>
      <%= f.password_field :password, :class => "span4", :placeholder => "Enter your password" %>
    </p>

    <p>
      <%= f.password_field :password_confirmation, :class => "span4", :placeholder => "Enter your password again" %>
    </p>

    <p>
      <%= f.submit "Sign up", :class => "btn btn-warning" %>
    </p>
  </fieldset>
<% end %>