<p class="pull-right">
  <%= link_to "Cancel my account", registration_path(resource_name), :data => { :confirm => "Are you sure?" }, :method => :delete, :class => "btn btn-danger" %>
  <%= link_to "Back", :back, :class => "btn btn-info" %>
</p>

<h2></h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>
  <fieldset>
    <legend>Edit <%= resource_name.to_s.humanize %></legend>
    
    <%= devise_error_messages! %>

    <p>
      <%= f.text_field :name, :class => "span4", :placeholder => "Enter your name" %>
    </p>

    <p>
      <%= f.email_field :email, :autocomplete => "off", :class => "span4", :placeholder => "Enter your email address" %>
    </p>
  </fieldset>

  <fieldset>
    <legend>Enter the following only if you wish to reset your password</legend>
    <p>
      <%= f.password_field :password, :autocomplete => "off", :class => "span4", :placeholder => "Enter your new password" %>
    </p>

    <p>
      <%= f.password_field :password_confirmation, :class => "span4", :placeholder => "Enter your new password again" %>
    </p>

    <p>
      <%= f.password_field :current_password, :class => "span4", :placeholder => "Enter your current password" %>
    </p>
  </fieldset>

  <p>
    <%= f.submit "Update", :class => "btn btn-warning" %>
  </p>
<% end %>
