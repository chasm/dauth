<%= form_for(@article) do |f| %>
  <fieldset>
    <% if @article.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@article.errors.count, "error") %> prohibited this article from being saved:</h2>

        <ul>
        <% @article.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <p>
      <%= f.text_field :name, :class => 'span6', :placeholder => "Add the title here" %>
    </p>
    <p>
      <%= f.text_area :content, :class => 'span6', :style => "height: 120px", :placeholder => "Enter the content here" %>
    </p>
    <p>
      <%= f.text_field :author_name, :class => 'span3', :placeholder => "What's your name?" %>
    </p>
    <p class="actions">
      <%= f.submit :class => "btn btn-warning" %>
    </p>
  </fieldset>
<% end %>
